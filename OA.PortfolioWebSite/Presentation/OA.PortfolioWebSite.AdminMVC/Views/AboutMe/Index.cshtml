@model OA.PortfolioWebSite.AdminMVC.ViewModels.AboutMeViewModel

<div class="card">
    <div class="card-body">
        <h5 class="card-title">About Me</h5>
        <p class="card-text">@Model.Introduction</p>
        <img src="@Model.ImageUrl1" alt="Image 1" class="img-thumbnail">
        <img src="@Model.ImageUrl2" alt="Image 2" class="img-thumbnail">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>