@model OA.PortfolioWebSite.AdminMVC.ViewModels.PersonelInfoViewModel

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Personal Information</h5>
        <p class="card-text"><strong>About:</strong> @Model.About</p>
        <p class="card-text"><strong>Name:</strong> @Model.Name</p>
        <p class="card-text"><strong>Surname:</strong> @Model.Surname</p>
        <p class="card-text"><strong>Birth Date:</strong> @Model.BirthDate.ToString("yyyy-MM-dd")</p>
        <p class="card-text"><strong>Address:</strong> @Model.Adress</p>
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
        <p class="card-text"><strong>Phone:</strong> @Model.Phone</p>
        <p class="card-text"><strong>My Property:</strong> @Model.MyProperty</p>

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
