@model List<OA.PortfolioWebSite.AdminMVC.ViewModels.ProjectViewModel>

<!-- Create butonunu sayfanın üst kısmına ekliyoruz -->


@foreach (var project in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@project.Title</h5>
            <p class="card-text">@project.Description</p>
            <!-- Resim API'den çekilecek şekilde ayarlandı -->
            <img src="@project.ImageUrl" alt="Project Image" class="img-thumbnail">
            <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-primary">Edit</a>
            <form asp-action="Delete" asp-route-id="@project.Id" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
}
<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Create New Project</a>
</div>
