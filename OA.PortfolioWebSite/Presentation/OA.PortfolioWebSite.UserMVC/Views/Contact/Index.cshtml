@using OA.PortfolioWebSite.UserMVC.ViewModels

@model ContactMessageViewModel

<div class="row no-gutters block-9">
    <div class="col-md-6 order-md-last d-flex">
        <form asp-action="Send" asp-controller="Contact" method="post" class="bg-light p-4 p-md-5 contact-form">
            <div class="form-group">
                <input  asp-for="Name" class="form-control" placeholder="Your Name" />
                <span asp-validation-for="Name"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" type="email" class="form-control" placeholder="Your Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Subject" class="form-control" placeholder="Subject" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="Message" cols="30" rows="7" class="form-control" placeholder="Message"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
            </div>
        </form>
    </div>

    <div class="col-md-6 d-flex">
        <div class="img" style="background-image: url(@Url.Content("~/template/images/about.jpg"));"></div>
    </div>
</div>